{
    "name": "logflux/sdk",
    "description": "Lightweight PHP SDK for communicating with LogFlux Agent",
    "type": "library",
    "license": "MIT",
    "version": "0.1.0",
    "keywords": ["logging", "logflux", "agent", "sdk", "php"],
    "homepage": "https://github.com/logflux-io/logflux-php-sdk",
    "authors": [
        {
            "name": "logflux/sdk",
            "email": "support@logflux.io"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-sockets": "*",
        "ext-json": "*",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "LogFlux\\Agent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LogFlux\\Agent\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "prefer-stable": true
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --level=8 src/",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}