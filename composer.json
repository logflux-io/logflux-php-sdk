{
    "name": "logflux/agent-php-sdk",
    "description": "Lightweight PHP SDK for communicating with LogFlux Agent",
    "type": "library",
    "license": "MIT",
    "version": "1.1.0",
    "keywords": ["logging", "logflux", "agent", "sdk", "php"],
    "homepage": "https://github.com/logflux-io/logflux-agent",
    "authors": [
        {
            "name": "LogFlux Team",
            "email": "support@logflux.io"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-sockets": "*",
        "ext-json": "*",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "LogFlux\\Agent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LogFlux\\Agent\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "prefer-stable": true
    },
    "scripts": {
        "test": "echo 'Testing is performed via GitHub Actions only'",
        "phpstan": "echo 'Static analysis is performed via GitHub Actions only'",
        "cs-check": "echo 'Code style checks are performed via GitHub Actions only'",
        "cs-fix": "echo 'Code style fixes are performed via GitHub Actions only'"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}